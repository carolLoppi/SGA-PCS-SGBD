<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
	    <servlet-name>ServletSGA</servlet-name>
	    <servlet-class>br.unirio.sga.presentation.ServletSGA</servlet-class>
	</servlet>
	
	<servlet>
	    <servlet-name>ServletEntrada</servlet-name>
	    <servlet-class>br.unirio.sga.presentation.ServletEntrada</servlet-class>
	</servlet>
	
	<servlet>
	    <servlet-name>ServletAutenticador</servlet-name>
	    <servlet-class>br.unirio.sga.presentation.ServletAutenticador</servlet-class>
	</servlet>
	
	<servlet>
	    <servlet-name>ServletRedirecionaSecao</servlet-name>
	    <servlet-class>br.unirio.sga.presentation.ServletRedirecionaSecao</servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>ServletRedirecionaSecao</servlet-name>
	    <url-pattern>/redirecionaOpcao</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>ServletEntrada</servlet-name>
	    <url-pattern>/incluir</url-pattern>
	</servlet-mapping>
	
	
	<servlet-mapping>
	    <servlet-name>ServletSGA</servlet-name>
	    <url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
	    <servlet-name>ServletAutenticador</servlet-name>
	    <url-pattern>/authentication</url-pattern>
	</servlet-mapping>
	
	
